<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewProfileActivity">

    <TextView
        android:id="@+id/view_profile_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:text="Your Profile Details"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/name_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_profile_header"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:text="Name :"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/company_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_marker"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:text="Company :"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/position_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/company_marker"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:text="Position :"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/yoe_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/position_marker"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:text="Years of Experience :"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/availability_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/yoe_marker"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:text="Availability :"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/message_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/availability_marker"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:text="Message :"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/name_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_profile_header"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/name_marker"
        android:layout_marginLeft="16dp"
        android:text=""
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/company_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_marker"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/company_marker"
        android:layout_marginLeft="16dp"
        android:text=""
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/position_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/company_marker"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/position_marker"
        android:layout_marginLeft="16dp"
        android:text=""
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/yoe_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/position_marker"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/yoe_marker"
        android:layout_marginLeft="16dp"
        android:text=""
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/availability_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/yoe_marker"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/availability_marker"
        android:layout_marginLeft="16dp"
        android:text=""
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/message_val"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/availability_marker"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/message_marker"
        android:layout_marginLeft="16dp"
        android:text=""
        android:gravity="start|top"
        android:textSize="24dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>